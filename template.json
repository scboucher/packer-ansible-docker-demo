{
    "builders": [
        {
            "type": "docker",
            "image": "fedora",
            "commit": "true"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": "dnf install -y ansible python2-dnf"
        },
        {
            "type": "ansible-local",
            "playbook_file": "./site.yml"
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "sboucher/packer-ansible-demo",
            "tag": "0.1"
        }
    ]
}